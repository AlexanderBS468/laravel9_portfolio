root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[**.css]
indent_style = tab
indent_size = 2

# Indentation override for all JS under lib directory
[**.js]
indent_size = 2

[*.php]
indent_size = 4

[*.md]
trim_trailing_whitespace = false

# Matches the exact files either package.json or .yml or .yaml
[*.{package.json,yml,yaml}]
indent_size = 2

[docker-compose.yml]
indent_size = 4
